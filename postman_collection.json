    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"merchant1\",\n  \"password\": \"password123\",\n  \"role\": \"merchant\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["auth", "register"]
            }
          },
          "response": []
        },
